# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost/database_name

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
UPLOAD_DIR=/opt/urvote/uploads
MAX_FILE_SIZE=52428800

# Redis Configuration
REDIS_URL=redis://localhost:6379

# External Services
RECAPTCHA_SECRET=your-recaptcha-secret-key
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# App Settings
APP_NAME=UrVote.Rocks
DEBUG=true

# GeoIP Service (optional)
GEOIP_API_KEY=your-ip-api-key

# DigitalOcean Spaces (use test/sandbox credentials)
